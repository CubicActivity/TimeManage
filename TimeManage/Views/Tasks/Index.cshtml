@model IEnumerable<TimeManage.Models.Tasks>

@{
    ViewBag.Title = "My Tasks";
}

<h2>My Tasks</h2>
<p>Add new tasks which you can add to your goals</p>
<div style="display: flex; align-items: center; gap: 10px; margin-bottom: 15px;">
    <p style="margin: 0;">
        @Html.ActionLink("Add New Task", "Create", null, new { @class = "btn btn-primary" })
    </p>

    @using (Html.BeginForm("DeleteAll", "Tasks", FormMethod.Post, new { onsubmit = "return confirm('Are you sure you want to delete all task?');", style = "margin: 0;" }))
    {
        @Html.AntiForgeryToken()

        <input type="submit" value="Delete All Tasks" class="btn btn-danger" />
    }
</div>



<table class="table">
    <thead >
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Completed</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>@(item.IsComplete ? "Yes" : "No")</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) 
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" }) 
                    <button type="button" class="btn btn-danger deletebtn" data-id="@item.Id">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>


@section scripts{

    <script>
        $(document).ready(function () {
            $('.deletebtn').click(function () {
                var button = $(this);
                var id = button.data('id');

                bootbox.confirm("Are you sure you want to delete this task?", function (result) {
                    if (result) {
                        $.ajax({
                            url: '/Tasks/Delete/' + id,
                            type: 'POST',
                            success: function (response) {
                                button.closest('tr').remove();
                                bootbox.alert("Task deleted successfully!");
                            },
                            error: function () {
                                bootbox.alert("Error deleting task. Try again!");
                            }
                        });
                    }
                });
            });
        });
    </script>
}