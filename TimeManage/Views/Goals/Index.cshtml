@model IEnumerable<TimeManage.Models.Goal>

@{
    ViewBag.Title = "My Goals";
}

<style>
    .dataTables_wrapper .dataTables_paginate .pagination {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
        flex-wrap: nowrap;
    }

    .dataTables_wrapper .dataTables_paginate .page-item {
        margin: 0 4px;
    }

    .dataTables_wrapper .dataTables_paginate .page-link {
        border-radius: 6px;
        padding: 6px 12px;
        background-color: transparent;
        color: #6c757d;
        font-weight: 500;
        transition: color 0.2s, background-color 0.2s;
    }

    .dataTables_wrapper .dataTables_paginate .paginate_button.active a {
        color: #0d6efd;
        background-color: transparent;
    }

    .dataTables_wrapper .dataTables_paginate .paginate_button a:hover {
        color: #0d6efd;
    }

    .dataTables_wrapper .dataTables_paginate .previous a,
    .dataTables_wrapper .dataTables_paginate .next a {
        background-color: #0d6efd;
        color: #fff;
        padding: 6px 12px;
        border-radius: 6px;
        font-weight: 500;
        text-decoration: none;
        transition: background-color 0.2s, transform 0.2s;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15);
    }

        .dataTables_wrapper .dataTables_paginate .previous a:hover,
        .dataTables_wrapper .dataTables_paginate .next a:hover {
            background-color: #0b5ed7;
            transform: translateY(-1px);
        }

    div.dataTables_length {
        display: inline-flex;
        align-items: center;
        white-space: nowrap;
        gap: 8px;
    }

        div.dataTables_length label {
            display: inline-flex;
            align-items: center;
            margin: 0;
            gap: 4px;
        }

        div.dataTables_length select {
            display: inline-block;
            margin: 0;
            padding: 4px 8px;
            border-radius: 5px;
            border: 1px solid #ced4da;
            background-color: #fff;
            color: #333;
            transition: border-color 0.2s, box-shadow 0.2s;
        }

            div.dataTables_length select:focus {
                outline: none;
                border-color: #0d6efd;
                box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
            }
</style>

<h2>My Goals</h2>
<p>Here's a list of your goals, write the name of your goal in the search box to find it easily!</p>
<table class="table table-striped table-bordered table-hover" id="datatable">
    <thead class="table-dark">
        <tr>
            <th>Goal Name</th>
            <th>Goal Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.GoalName)</td>
                <td>@Html.DisplayFor(modelItem => item.GoalDescription)</td>
                <td>
                    <div class="btn-group" role="group">
                        @Html.ActionLink("Edit", "Edit", new { id = item.GoalId }, new { @class = "btn btn-primary me-1" })
                        @Html.ActionLink("Details", "Details", new { id = item.GoalId }, new { @class = "btn btn-primary me-1" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.GoalId }, new { @class = "btn btn-danger" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<p>
    @Html.ActionLink("Create New Goal", "Create", null, new { @class = "btn btn-primary" })
</p>

@section Scripts{

    <script>
        $(document).ready(function () {
            table = $('#datatable').DataTable({
                "lengthChange": true,
                "paging": true,
                "searching": true,
                "info": true,
                dom: '<"d-flex justify-content-start mb-3"f>rt<"d-flex justify-content-between align-items-center mt-3 bottom-row"l p>'
            });
        });
    </script>

}